{
  "name": "@stadtkatalog/stadtkatalog",
  "version": "1.0.0",
  "description": "The Stadtkatalog.org library for Node.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test-coverage": "jest --collectCoverage",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "doc": "typedoc --out ./doc --theme markdown --hideSources --hideBreadcrumbs --includeVersion --readme none ./src",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "prepush": "npm run lint && npm test && npm run doc"
  },
  "keywords": [
    "stadtkatalog"
  ],
  "author": "Philipp Naderer-Puiu",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/parse-link-header": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "ts-jest": "^25.4.0",
    "typedoc": "^0.17.6",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "parse-link-header": "^1.0.1"
  },
  "engines": {
      "node" : ">= 12.13.0"
  }
}
