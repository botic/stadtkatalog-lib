{
    "compilerOptions": {
        "target": "ES5",
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf",
        "declaration": true,
        "pretty": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "outDir": "./lib"
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
